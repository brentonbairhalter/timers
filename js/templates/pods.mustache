<div class="panel-heading">
<h3 class="panel-title">Pod {{id}}</h3>
</div>
<div class="panel-body">
  <div class="row pod-head center-block">
    {{>templates/select}}
    <div class="message hide"></div>
    <h3 class="clock"></h3>
  </div>  
  <button type="button" class="btn btn-primary btn-lg btn-block hide" data-update="start">Start Round</button>
  <button type="button" class="btn btn-primary btn-lg btn-block hide" data-update="stop">Stop Round</button>
  <button type="button" class="btn btn-primary btn-lg btn-block hide" data-update="resume">Resume Round</button>
 </div> 