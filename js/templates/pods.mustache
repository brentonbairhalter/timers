<div class="panel-heading">
<h3 class="panel-title">Pod {{id}}</h3>
</div>
<div class="panel-body">
  <div class="row pod-head center-block">
    {{>templates/select}}
    <div class="message hide"></div>
    <h1 class="clock alert alert-info hide"></h1>
  </div>  
  <div><button type="button" class="btn btn-primary btn-sm btn-block hide" data-update="start">Start Round</button></div>
  <div><button type="button" class="btn btn-primary btn-sm btn-block hide" data-update="stop">Stop Round</button></div>
  <div><button type="button" class="btn btn-primary btn-sm btn-block hide" data-update="resume">Resume Round</button></div>
 </div> 